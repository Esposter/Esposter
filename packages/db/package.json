{
  "name": "@esposter/db",
  "description": "Database schemas and utilities for Esposter using Drizzle ORM (PostgreSQL).",
  "version": "2.15.0",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/Esposter/Esposter/blob/main/packages/db#readme",
  "license": "Apache-2.0",
  "author": "Jimmy Chen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "drizzle",
    "orm",
    "postgresql",
    "postgres",
    "pg",
    "sql",
    "database",
    "schema",
    "postgres",
    "typescript",
    "ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esposter/Esposter.git"
  },
  "bugs": {
    "url": "https://github.com/Esposter/Esposter/issues"
  },
  "scripts": {
    "build": "pnpm export:gen && rolldown --config rolldown.config.ts",
    "coverage": "vitest run --coverage",
    "db:run": "tsx node_modules/drizzle-kit/bin.cjs",
    "db:gen": "pnpm db:run generate",
    "db:studio": "pnpm db:run studio",
    "db:up": "pnpm db:run up",
    "export:gen": "ctix build --config ../configuration/.ctirc-ts",
    "lint": "oxlint && eslint .",
    "lint:fix": "oxlint --fix && eslint --fix .",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@azure/data-tables": "catalog:",
    "@azure/storage-blob": "catalog:",
    "@esposter/shared": "workspace:*",
    "dayjs": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "mime-types": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/mime-types": "catalog:"
  }
}
