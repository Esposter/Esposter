{
  "extends": "../app/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "${configDir}/src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "${configDir}/*.ts",
    "${configDir}/types/*.d.ts",
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.vue"
  ],
  "exclude": ["${configDir}/node_modules"]
}
