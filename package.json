{
  "name": "esposter",
  "description": "A nice and casual place for posting random things.",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://github.com/Esposter/Esposter#readme",
  "license": "Apache-2.0",
  "author": "Jimmy Chen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esposter/Esposter.git"
  },
  "bugs": {
    "url": "https://github.com/Esposter/Esposter/issues"
  },
  "scripts": {
    "build": "pnpm build:packages && pnpm build:docs && pnpm build:app",
    "build:app": "turbo build --filter=@esposter/app",
    "build:docs": "typedoc",
    "build:packages": "turbo build --filter=!@esposter/app",
    "start": "node packages/app/.output/server/index.mjs",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "typecheck:packages": "turbo typecheck --filter=!@esposter/app",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:fix:packages": "turbo lint:fix --filter=!@esposter/app",
    "release": "pnpm build:packages && pnpm lint:fix:packages && pnpm typecheck:packages && changeset version && changeset publish",
    "refresh:lockfile": "pnpm cross-os refresh:lockfile",
    "cross-os": "node packages/app/scripts/cross-os.ts",
    "pwsh": "pwsh -ExecutionPolicy Unrestricted"
  },
  "cross-os": {
    "refresh:lockfile": {
      "win32": "pnpm pwsh scripts/refreshLockfile.ps1",
      "linux": "./scripts/refreshLockfile.sh"
    }
  },
  "dependencies": {
    "data-urls": "^5.0.0",
    "is-mobile": "^5.0.0",
    "vue": "^3.5.13",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/data-urls": "^3.0.4",
    "@types/xml2js": "^0.4.14",
    "ctix": "^2.7.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "rollup": "^4.34.7",
    "turbo": "^2.4.2",
    "type-fest": "^4.34.1",
    "typedoc": "^0.27.7",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vue-tsc": "2.1.6"
  },
  "devDependenciesComments": {
    "vue-tsc": "@TODO: https://github.com/vuejs/language-tools/issues/4973"
  },
  "engines": {
    "node": "^22.14.0"
  },
  "packageManager": "pnpm@10.4.0+sha512.6b849d0787d97f8f4e1f03a9b8ff8f038e79e153d6f11ae539ae7c435ff9e796df6a862c991502695c7f9e8fac8aeafc1ac5a8dab47e36148d183832d886dd52",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "core-js",
      "esbuild",
      "vue-demi"
    ]
  }
}
