{
  "name": "esposter",
  "description": "A nice and casual place for posting random things.",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://github.com/Esposter/Esposter#readme",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esposter/Esposter.git"
  },
  "bugs": {
    "url": "https://github.com/Esposter/Esposter/issues"
  },
  "scripts": {
    "build": "lerna run build",
    "start": "lerna run start --scope=@esposter/app",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "release": "pnpm lint:fix --no-private && pnpm build --no-private && lerna publish --yes",
    "refresh:lockfile": "pnpm pwsh scripts/refreshLockfile.ps1",
    "pwsh": "pwsh -ExecutionPolicy Unrestricted"
  },
  "dependencies": {
    "data-urls": "^5.0.0",
    "vue": "^3.4.27",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/data-urls": "^3.0.4",
    "@types/xml2js": "^0.4.14",
    "ctix": "^2.4.5",
    "eslint": "^9.4.0",
    "lerna": "^8.1.3",
    "rollup": "^4.18.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": "^22.2.0"
  },
  "packageManager": "pnpm@9.1.4"
}
