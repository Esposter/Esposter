{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "ignorePresets": [":prHourlyLimit2"],
  "rangeStrategy": "bump",
  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest", "bump"],
      "automerge": true,
      "automergeType": "branch",
      "platformAutomerge": true
    }
  ]
}
